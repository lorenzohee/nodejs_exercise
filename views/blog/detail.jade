extends ../header
block pageLink
    link(rel='stylesheet', href='/stylesheets/blog.css')
block content
    include ../common/navBanner
    .blog_main
        .blog_item
            h3.blog_item_title= collectionObject.blog.title
            .blog_item_user
                .blog_item_user_avatar
                    //img(src='http://test.test.com',alt='凉茶')
                .blog_item_user_name= collectionObject.blog.userName
                    |&nbsp;&nbsp;创建于&nbsp;&nbsp;
                    = collectionObject.blog.created_time
                    if(user && collectionObject.blog.userId==user._id)
                        a(href='/blog/edit/#{collectionObject.blog._id}', title='编辑')
                            i.fa.ml15.mr5.fa-edit
                        a(href='/blog/delete/#{collectionObject.blog._id}', title='删除')
                            i.ml5.fa.fa-trash-o
            .blog_item_content
                !{collectionObject.blog.content}